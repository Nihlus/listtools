<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>listtools</RootNamespace>
    <AssemblyName>listtools</AssemblyName>
    <TargetFramework>netstandard2.0</TargetFramework>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\listtools.key</AssemblyOriginatorKeyFile>
    <EnvironmentVariables>
      <Variable name="DICTIONARY_PATH" value="/home/jarl/Programming/liblistfile/liblistfile/Dictionary/dictionary.dic" />
      <Variable name="GAME_PATH" value="/media/storage2/Games/World of Warcraft WOTLK" />
      <Variable name="OUTPUT_PATH" value="/home/jarl/Desktop/listtools" />
      <Variable name="OUTPUT_FORMAT" value="compressed" />
      <Variable name="TASK_TYPE" value="optimize" />
    </EnvironmentVariables>
  </PropertyGroup>
  <PropertyGroup>
    <Title>listtools</Title>
    <Authors>Jarl Gullberg</Authors>
    <Version>2.0.1</Version>
    <Description>Command-line tool for optimizing and generating lists and node trees from listfiles.</Description>
    <Copyright>Copyright Jarl Gullberg 2017</Copyright>
  </PropertyGroup>
  <PropertyGroup>
    <PackageVersion>2.0.1-preview1</PackageVersion>
    <PackageId>listtools</PackageId>
    <IsTool>true</IsTool>
    <PackageLicenseUrl>https://www.gnu.org/licenses/gpl-3.0.en.html</PackageLicenseUrl>
    <PackageProjectUrl>http://wowdev.tools/</PackageProjectUrl>
    <PackageReleaseNotes>Initial release on NuGet and port to .NET Standard 2.0.</PackageReleaseNotes>
    <PackageTags>cross-platform;file-format</PackageTags>
    <PackageOutputPath>../nuget</PackageOutputPath>
    <IncludeSymbols>true</IncludeSymbols>
    <RepositoryUrl>https://github.com/Nihlus/listtools</RepositoryUrl>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="1.9.71" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\lib\liblistfile\liblistfile\liblistfile.csproj" />
    <ProjectReference Include="..\lib\libwarcraft\libwarcraft\libwarcraft.csproj" />
  </ItemGroup>
</Project>